{
  "name": "hapi-mongoose-typescript-starter",
  "version": "0.0.1",
  "description": "Get started with Hapi.js, Mongoose and Typescript",
  "main": "index.js",
  "author": "Damian Morten",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./index.js",
    "start": "cross-env NODE_ENV=production node ./index.js",
    "live": "cross-env NODE_ENV=production pm2 start ./src/index.js --name api",
    "die": "pm2 stop ./src/index.js",
    "format": "prettier --write src/.",
    "lint": "eslint ./src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "test": "cross-env NODE_ENV=test jest --config ./jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:coverage-report": "cross-env NODE_ENV=test jest --coverage && open-cli ./coverage/lcov-report/index.html",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "prettier --write --ignore-unknown",
      "eslint"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/runtime": "^7.12.18",
    "@hapi/hapi": "^20.1.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.33",
    "@types/dotenv-safe": "^8.1.1",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/hapi__vision": "^5.5.2",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.8",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.31",
    "babel-plugin-module-resolver": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.4",
    "dayjs-plugin-utc": "^0.1.2",
    "dotenv-safe": "^8.2.0",
    "hapi-auth-jwt2": "^10.2.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.17",
    "nodemailer": "^6.5.0",
    "pm2": "^4.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@shelf/jest-mongodb": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "hapi-swagger": "^14.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mongodb": "^3.6.4",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.7",
    "opener": "^1.5.2",
    "prettier": "^2.2.1"
  }
}
